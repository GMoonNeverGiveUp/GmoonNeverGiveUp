{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "chai",
      "@nomicfoundation/hardhat-chai-matchers"
    ]
  },
  "include": [
    "./scripts",
    "./tests",
    "./contracts",
    "./hardhat.config.ts",
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}
