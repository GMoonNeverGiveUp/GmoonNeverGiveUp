{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "artifacts/contracts/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
